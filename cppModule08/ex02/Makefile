NAME	= ex02

CC		= c++
CFLAGS	= -Werror -Wextra -Wall -std=c++98

SRC		= main.cpp
		  
OBJ		= $(SRC:.cpp=.o)

#COLORS
RED        = \033[0;31m
GREEN    = \033[0;32m
YELLOW    = \033[0;33m
RESET    = \033[0m


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@
	@echo "$(GREEN)âœ…Compiledâœ…$(RESET)"

%.o: %.cpp
	@echo "$(GREEN)ðŸ”œCompilingðŸ”œ$(YELLOW)"
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "$(RED)ðŸ”œDeleting Object FilesðŸ”œ$(YELLOW)"
	rm -f *.o
	@echo "$(RED)ðŸ—‘ï¸ Object Files DeletedðŸ—‘ï¸$(YELLOW)"

fclean: clean
	@echo "$(RED)ðŸ”œDeleting NAMEðŸ”œ $(YELLOW)"
	rm -f $(NAME)
	@echo "$(RED)ðŸ—‘ï¸ NAME DeletedðŸ—‘ï¸ $(YELLOW)"

re: fclean all

.PHONY: all re clean fclean